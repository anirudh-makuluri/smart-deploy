# Environment: use "prod" for production (Gemini API), "local" (or anything else) for local LLM
NODE_ENV=local

# OAuth (for user login and repo access)
# Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# GitHub
GITHUB_ID=your_github_client_id
GITHUB_SECRET=your_github_client_secret

# NextAuth Configuration
NEXTAUTH_SECRET=generate_a_strong_random_secret
NEXTAUTH_URL=http://localhost:3000

# WebSocket URL (for Docker deployment, use your EC2 IP)
NEXT_PUBLIC_WS_URL=ws://localhost:4001

# Deployment domain: all "Visit" links use https://{service-name}.{this-domain} (e.g. myapp.anirudh-makuluri.xyz)
NEXT_PUBLIC_DEPLOYMENT_DOMAIN=anirudh-makuluri.xyz

# Vercel DNS (optional): automatically add CNAME for each deployment so subdomain points to deploy URL
# Get token from https://vercel.com/account/tokens . Domain must already be added in Vercel.
VERCEL_TOKEN=your_vercel_token
VERCEL_DOMAIN=anirudh-makuluri.xyz
# VERCEL_TEAM_ID=team_xxx

# Node heap for Docker build (default 2048 = t3.micro with swap; use 4096 on larger instances)
# NODE_MAX_OLD_SPACE_SIZE=2048

# Google Cloud Platform (Cloud Run Deployment)
GCP_PROJECT_ID=your_gcp_project_id
GCP_SERVICE_ACCOUNT_KEY=your_service_account_json_as_string_or_file_path

# Supabase (primary database – get from Project Settings → API)
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Firebase (deprecated – app now uses Supabase)
# FIREBASE_SERVICE_ACCOUNT_KEY=base64_encoded_json_key_here
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# AWS Configuration (for AWS deployments - Elastic Beanstalk, ECS, EC2, and Bedrock LLM)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-west-2

ENVIRONMENT=production
LOCAL_LLM_BASE_URL=
LOCAL_LLM_MODEL=
BEDROCK_MODEL_ID=
ECS_ACM_CERTIFICATE_ARN=
# EB HTTPS: ACM cert ARN (e.g. *.anirudh-makuluri.xyz). When set, EB environments get HTTPS listener (port 443 → instance 80).
EB_ACM_CERTIFICATE_ARN=